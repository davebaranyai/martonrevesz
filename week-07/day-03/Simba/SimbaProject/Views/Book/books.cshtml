@model System.Collections.Generic.List<SimbaProject.Models.Book>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Book List</title>
    <link rel="stylesheet" type="text/css" href="~/style.css">
</head>
<body>
    <nav>
        <center>
            <a href="/">Home</a>
            <a href="/reader/list">Reader list</a>
        </center>
    </nav>

    <center>
        <table style="width:30%">
            <tr>
                <th>Title</th>
            </tr>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr>
                    <td> <a href="/reader/single/@Model[i].Id"> @Model[i].Title</a></td>
                </tr>
            }
        </table>

    </center>
</body>
</html>