@model SimbaProject.Models.Reader
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Single Reader</title>
    <link rel="stylesheet" type="text/css" href="~/style.css">
</head>
<body>
    <nav>
        <center>
            <a href="/index">Home</a>
            <a href="/reader/list">Reader list</a>
            @if (SimbaProject.Repositories.ReaderRepository.CurrentId ==1)
            {
                <a href="/reader/update?id=@Model.ReaderId">Update data</a>
                <a href="/reader/fee?id=@Model.ReaderId">Fine reader</a>
                @if (Model.CurrentBorrow == 0)
                {
                    <a href="/reader/delete?id=@Model.ReaderId">Delete</a>
                }
            }           
        </center>
    </nav>
    <center>
        <table style="width:30%">
            <tr>
                <td>Name</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Fine</td>
                <td>@string.Format("{0:0.00 , $}", Model.Fine)</td>
            </tr>
            <tr>
                <td>AccountType</td>
                <td>@Model.UserType</td>
            </tr>
            <tr>
                <td>Vip</td>
                <td>@Model.VIP</td>
            </tr>
        </table>
    </center>
</body>
</html>


