@model System.Collections.Generic.List<TodoApp.Models.Todo>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todos</title>
</head>
<body>
    <h2>Todos for today</h2>
    <table style="width:100%">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Urgent</th>
                <th>Done</th>
            </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.IsUrgent</td>
                <td>@item.IsDone</td>
            </tr>
        }
    </table>
</body>
</html>