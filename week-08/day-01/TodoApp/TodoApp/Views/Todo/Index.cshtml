@model TodoApp.ViewModels.TodoViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todos</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h2>Todos for today</h2>
    <center>
        <a href="/create">Add todo</a><br>
        <a href="/user">Add user</a><br>
        <a href="/deleteuser">Delete user</a><br>
    </center>    
    <table class="table table-striped table-bordered table-dark" >
            <thead class="thead-dark">
                <th  scope="col">Id</th>
                <th  scope="col">Title</th>
                <th  scope="col">Urgent</th>
                <th  scope="col">Done</th>
                <th scope="col">User</th>
                <th  scope="col">Delete</th>
                <th  scope="col">Edit</th>
            </thead>
        @foreach (var item in Model.Todos)
        {
            <tr>
                <td>@item.TodoId</td>
                <td>@item.Title</td>
                <td>@item.IsUrgent</td>
                <td>@item.IsDone</td>
                <td>@(Model.Users.FirstOrDefault(x => x == item.User).Name)</td>
                <td><a href= "/delete/@item.TodoId">Delete</a></td>
                <td><a href="/edit/@item.TodoId">Edit</a></td>
            </tr>
        }
    </table>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>