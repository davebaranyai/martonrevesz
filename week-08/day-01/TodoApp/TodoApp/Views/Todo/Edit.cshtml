@model TodoApp.Models.Todo

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Edit</title>
</head>
<body>
    <form action="/todo/edit/@Model.Id" method="post">
        Title:
        <input type="text" name="title" value="@Model.Title"/><br>
        Is Urgent:
        <input type="checkbox" name="isUrgent" value="true" checked= "@Model.IsUrgent"/><br>
        Is Done:
        <input type="checkbox" name="isDone" value="true" checked="@Model.IsDone" /><br>
        <input type="submit" name="name" value="Send" />
    </form>
</body>
</html>